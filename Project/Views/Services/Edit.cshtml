@model Services
<form asp-action="Edit" asp-controller="Services" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ServiceId" />
    <input type="hidden" asp-for="Logo" />
    <div class="mb-3">
        <label for="Logo" class="form-label">Logo</label>
        <input type="file" name="file" asp-for="Logo" class="form-control" id="Logo" aria-describedby="Logo">
    </div>
   <div class="mb-3">
        <label for="Topic" class="form-label">Topic</label>
        <input type="text" asp-for="Topic" class="form-control" id="Topic" aria-describedby="Topic">
        <span asp-validation-for="Topic"></span>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" aria-describedby="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
   <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index" asp-controller="Services" class="btn btn-danger">Back To List</a>
</form>